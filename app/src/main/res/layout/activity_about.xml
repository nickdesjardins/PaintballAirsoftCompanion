<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@android:color/black"
    tools:context="ca.pcsquad.paintballairsoftcompanion.About">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/btnAbout"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/about" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview"
        android:layout_below="@+id/btnAbout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/linearlayouttext"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="\n Thank you:"
                android:id="@+id/txtthanks" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="From two canadian soldiers, \nyou have our sincerest appreciation for downloading this application.\n"
                android:id="@+id/txtthanks0" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/imgSoldiers"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:contentDescription="@string/about" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="\nThe idea:"
                android:id="@+id/txtapp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="It came to us by playing airsoft one morning and needing a simple bomb application.\nIt later became a much better companion by adding multiple ideas for Gamemodes and using the Battleplan as a tactical map awareness."
                android:id="@+id/txtapp0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="\nMore to come:"
                android:id="@+id/txtmore" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="If you guys liked our basic application, let us know and we will bring free updates."
                android:id="@+id/txtmore0" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
