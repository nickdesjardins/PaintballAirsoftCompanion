<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical"
    tools:context="ca.pcsquad.paintballairsoftcompanion.MainActivity">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/btnback"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:src="@drawable/btnbattleplanwhite"
        android:contentDescription="@string/battleplan"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BattlePlan"
        android:layout_below="@id/btnback" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="0dp"
        android:layout_marginBottom="70dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:padding="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/btnGRed"
            android:contentDescription="@string/color_picker" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:padding="5dp"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/btnGBlue"
            android:layout_marginEnd="25dp"
            android:contentDescription="@string/color_picker"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:padding="5dp"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/btnGGreen"
            android:layout_marginEnd="25dp"
            android:contentDescription="@string/color_picker"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:padding="5dp"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/btnGYellow"
            android:layout_marginEnd="25dp"
            android:contentDescription="@string/color_picker" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="0dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/btnRed"
            android:contentDescription="@string/color_picker"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/btnBlue"
            android:layout_marginEnd="25dp"
            android:contentDescription="@string/color_picker"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/btnGreen"
            android:layout_marginEnd="25dp"
            android:contentDescription="@string/color_picker"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/btnYellow"
            android:layout_marginEnd="25dp"
            android:contentDescription="@string/color_picker"/>

    </LinearLayout>

</RelativeLayout>